{
  "manifest_version": 2,
  "name": "Onay",
  "version": "0.3",
  "description": "Extension to check the Onay (Kazakhstan transport card) balance",
  "author": "Alexander Gorishnyak",
  "permissions": [
    "storage",
    "https://cabinet.onay.kz/",
    "https://fonts.googleapis.com/"
  ],
  "browser_action": {
    "default_icon": {
      "38": "img/icon-38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  }
}
